{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default" style="margin: 50px auto;">
        <div class="panel-heading">
            {{ 'register.to.site'|trans({}, 'messages') }}
            <a href="{{ path('fos_user_security_login') }}" class="pull-right">{{ 'layout.login'|trans() }}</a>
        </div>
        <div class="panel-body">
            <form action="{{ path('admin_blog_registeer_user') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                <div class="form-group">
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control' } }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control' } }) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.plainPassword) }}
                </div>

                {{ form_widget(form._token) }}

                <div class="text-center">
                    <button type="submit" class="btn btn-default">{{ 'layout.register'|trans }}</button>
                </div>
                {% if  form_errors(form.username) %}
                    <br>
                    <div class="alert alert-danger">
                        {{ form_errors(form.username) }}
                    </div>
                {% endif %}
                {% if  form_errors(form.email) %}
                    <br>
                    <div class="alert alert-danger">
                        {{ form_errors(form.email) }}
                    </div>
                {% endif %}
                {% if  form_errors(form.plainPassword) %}
                    <br>
                    <div class="alert alert-danger">
                        {{ form_errors(form.plainPassword) }}
                    </div>
                {% endif %}

            </form>
        </div>
    </div>
</div>
