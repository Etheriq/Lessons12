<div class="col-md-6 col-md-offset-3">

    <br>
    <a href="{{ path('admin_blog_edit_profile') }}" class="btn btn-sm btn-warning pull-right">{{ 'Edit'|trans }}</a>
    <br><br>
        <table class="table table-condensed table-hover">
            <tr>
                <th>{{ 'Field'|trans }}</th>
                <th>{{ 'Value'|trans }}</th>
            </tr>

            <tr>
                <td>{{ 'username'|trans }}</td>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <td>{{ 'email'|trans }}</td>
                <td>{{ user.email }}</td>
            </tr>
            {% for role in user.roles %}
                <tr>
                    <td>{{ 'role'|trans }}</td>
                    <td>{{ role }}</td>
                </tr>
            {% endfor %}
        </table>

</div>
