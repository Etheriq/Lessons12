{% extends 'EtheriqBlogBundle::base.html.twig' %}

    {% block title %}
        Home page
    {% endblock title %}

     {% block wraper %}

         <div class="col-md-10">
             {% block breadcrumb %}

                 <ol class="breadcrumb">
                     <li class="active">{{ 'Home'|trans }}</li>
                 </ol>

             {% endblock breadcrumb %}
         </div>
         <div class="col-md-2">
             <ul class="locale_change">
                 <li>
                     <a href="{{ path('set_locale', {'loc': 'en'}) }}">
                         <img src="{{ asset('img/flag_great_britain.png') }}" alt="English">
                     </a>
                 </li>
                 <li>
                     <a href="{{ path('set_locale', {'loc': 'ru'}) }}">
                         <img src="{{ asset('img/flag_russia.png') }}" alt="Russian">
                     </a>
                 </li>
                 <li>
                     <a href="{{ path('set_locale', {'loc': 'uk'}) }}">
                         <img src="{{ asset('img/flag_ukraine.png') }}" alt="Ukrainian">
                     </a>
                 </li>
             </ul>
         </div>

         <div class="row">
         <div class="col-md-8">
             {% block content %}

                {{ blog.title }} <br>
                 {{ blog.category.categoryName }} <br>

                 {{ blog.slug }} <br>

                 {% for tag in blog.tags %}
                     <span class="label label-info">{{ tag.tagName }}</span>
                 {% endfor %}


             {% endblock content %}
         </div>

         <div class="col-md-4">
             {% block sidebar %}
                 <div class="panel panel-default">
                     <div class="panel-heading">
                         <h3 class="panel-title">Lost articles</h3>
                     </div>
                     <div class="panel-body">
                         5 lost articles
                     </div>
                 </div>

                 <div class="panel panel-default">
                     <div class="panel-heading">
                         <h3 class="panel-title">Last post from guest</h3>
                     </div>
                     <div class="panel-body">
                         post from guest
                     </div>
                 </div>


             {% endblock sidebar %}
         </div>
         </div>







     {% endblock wraper %}

         {% block footer %}
                     <p> footer home</p>
         {% endblock footer %}








